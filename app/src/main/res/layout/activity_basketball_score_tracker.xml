<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basketball_score_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.scoretracker.BasketballScoreTracker"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="3"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAwayThree"
            android:layout_weight="1"
            android:layout_below="@+id/btnAwayOne"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="24sp" />

        <Button
            android:text="2"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnHomeTwo"
            android:layout_below="@+id/btnHomeOne"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="24sp" />

        <Button
            android:text="3"
            android:layout_height="wrap_content"
            android:id="@+id/btnHomeThree"
            android:layout_width="125dp"
            android:layout_weight="0.65"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/btnHomeOne"
            android:layout_toRightOf="@+id/btnHomeTwo"
            android:layout_toEndOf="@+id/btnHomeTwo"
            android:textSize="24sp" />

        <Button
            android:text="1"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAwayOne"
            android:layout_weight="0.52"
            android:layout_marginRight="69dp"
            android:layout_marginEnd="69dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="24sp" />

        <Button
            android:text="2"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAwayTwo"
            android:layout_weight="1"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:layout_alignBaseline="@+id/btnHomeThree"
            android:layout_alignBottom="@+id/btnHomeThree"
            android:layout_toLeftOf="@+id/btnAwayThree"
            android:layout_toStartOf="@+id/btnAwayThree"
            android:textSize="24sp" />

        <Button
            android:text="1"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnHomeOne"
            android:layout_weight="0.56"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btnHomeTwo"
            android:layout_alignStart="@+id/btnHomeTwo"
            android:textSize="24sp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="0"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/txtHomeScore"
            android:textSize="64sp"
            android:height="75dp"
            android:width="125dp"
            android:layout_above="@+id/txtHome"
            android:layout_alignRight="@+id/txtHome"
            android:layout_alignEnd="@+id/txtHome"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:id="@+id/txtAwayScore"
            android:textSize="64sp"
            android:height="75dp"
            android:width="125dp"
            android:layout_below="@+id/btnAwayTwo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="67dp"
            android:layout_marginEnd="67dp"
            android:textAlignment="center"
            android:layout_width="382dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHome"
            android:textSize="36sp"
            android:layout_marginLeft="97dp"
            android:layout_marginStart="97dp"
            android:layout_alignBaseline="@+id/txtAway"
            android:layout_alignBottom="@+id/txtAway"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />

        <TextView
            android:text="Away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAway"
            android:textSize="36sp"
            android:layout_marginRight="83dp"
            android:layout_marginEnd="83dp"
            android:layout_weight="0.00"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
